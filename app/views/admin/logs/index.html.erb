<div class="container">
  <div class="row">
    <div class="col-md-2">
      <h4 class="font-weight-bold my-4 bg-light">ログ一覧</h4>
    </div>
  </div>

  <div class="row">
    <div class="col">

      <table class='table mx-auto my-5 w-75'>
        <thead>
          <tr class="bg-light">
            <th>ログID</th>
            <th>タイトル</th>
            <th>旅行先</th>
            <th>投稿者</th>
          </tr>
        </thead>

        <% @logs.each do |log| %>

        <tbody>
          <tr>
            <td><%= log.id %></td>
            <td><%= link_to log.title, admin_log_path(log.id) %></td>
            <td><%= log.location %></td>
            <td><%= link_to log.user.name,admin_user_path(log.user.id) %></td>
          </tr>
        </tbody>

        <% end %>

      </table>
      <%= paginate @logs, class: "pagination" %>
    </div>
  </div>
</div>

