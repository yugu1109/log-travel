<div class="container">
  <div class="row">
    <div class="col-mg-2">
      <h4 class="font-weight-bold my-4 bg-light">ユーザー編集</h4>
    </div>
  </div>

  <div class="row">
    <div class="col">

      <%= form_with model: @user, url: admin_user_path(@user.id) do |f| %>
        <table>
          <tr>
            <td class="font-weight-bold">ユーザーID</td>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <td>名前</td>
            <td><%= f.text_field :name, autofocus: true, autocomplete: "name" %></td>
          </tr>
          <tr>
            <td>年齢</td>
            <td><%= f.text_field :age, autofocus: true, autocomplete: "age" %></td>
          </tr>
          <tr>
            <td>性別</td>
            <td class="custom-control custom-radio custom-control-inline">
                <%= f.radio_button :gender, :true %>
                <%= f.label :gender, '男性', for: 'is_active-on-sale' %>
            </td>
            <td class="custom-control custom-radio custom-control-inline">
                <%= f.radio_button :gender, :false %>
                <%= f.label :gender, '女性', for: 'is_active-off-sale' %>
            </td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <td class="font-weight-bold">会員ステータス </td>
            <td class ="custom-control custom-radio custom-control-inline">
              <%= f.radio_button :is_active, true, checked: @user.is_active == true, class: 'custom-control-input', id: 'is_active_status-active' %>
              <%= f.label :is_active,'有効', class: 'custom-control-label', for: 'is_active_status-active' %>
            </td>
            <td class ="custom-control custom-radio custom-control-inline">
              <%= f.radio_button :is_active, false, checked: @user.is_active == false, class: 'custom-control-input', id: 'is_active_status-deleted' %>
              <%= f.label :is_active,'退会', class: 'custom-control-label', for: 'is_active_status-deleted' %>
            </td>
          </tr>
        </table>

        <%= f.submit '変更を保存',class: "btn btn-success" %>

      <% end %>

    </div>
  </div>
</div>


