<div class="container">
  <div class="row">
    <div class="col-md-2">
      <h4 class="font-weight-bold my-4 bg-light">ユーザー一覧</h4>
    </div>
  </div>

  <div class="row">
    <div class="col">

      <table class='table mx-auto my-5 w-75'>
        <thead>
          <tr class="bg-light">
            <th>会員ID</th>
            <th>名前</th>
            <th>年齢</th>
            <th>性別</th>
            <th>会員ステータス</th>
          </tr>
        </thead>

        <% @users.each do |user| %>

        <tbody>
          <tr>
            <td><%= user.id %></td>
            <td><%= link_to user.name, admin_user_path(user.id) %></td>
            <td><%= user.age %>歳</td>
            <td class="<%= user.gender ? 'text-success font-weight-bold' : 'text-muted font-weight-bold' %>"><%= user.status %></td>
            <td class="<%= user.is_active ? 'text-success font-weight-bold' : 'text-muted font-weight-bold' %>"><%= user.is_active_status %></td>
          </tr>
        </tbody>

        <% end %>

      </table>
      <%= paginate @users, class: "pagination" %>
    </div>
  </div>
</div>


