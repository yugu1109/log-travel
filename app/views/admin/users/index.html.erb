<div class="container my-5">
  <!-- ヘッダー -->
  <div class="row mb-4">
    <div class="col-12">
      <h4 class="font-weight-bold text-center bg-light py-3 shadow-sm rounded">ユーザー一覧</h4>
    </div>
  </div>

  <!-- ユーザーリスト -->
  <div class="row justify-content-center">
    <div class="col-lg-10 col-md-12">

      <!-- テーブル -->
      <table class="table table-bordered table-hover mx-auto w-100 shadow-sm">
        <thead class="thead-dark">
          <tr>
            <th>会員ID</th>
            <th>名前</th>
            <th>年齢</th>
            <th>性別</th>
            <th>会員ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= link_to user.name, admin_user_path(user.id), class: "text-primary font-weight-bold" %></td>
              <td><%= user.age %>歳</td>
              <td class="<%= user.gender ? 'text-success font-weight-bold' : 'text-muted font-weight-bold' %>"><%= user.gender ? '男性' : '女性' %></td>
              <td class="<%= user.is_active ? 'text-success font-weight-bold' : 'text-muted font-weight-bold' %>"><%= user.is_active ? '有効' : '無効' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <!-- ページネーション -->
      <div class="d-flex justify-content-center mt-4">
        <%= paginate @users, class: "pagination pagination-lg" %>
      </div>
      
    </div>
  </div>
</div>

