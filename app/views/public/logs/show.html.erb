<div class="container">
  <div class="row">
    <div class="col-mg-2">
      <h4 class="font-weight-bold my-4 bg-light">ログ詳細</h4>
    </div>
  </div>
  <div class="row">

    <div class="col-lg-4">
      <% if @log.image.attached? %>
        <%= image_tag @log.get_image, width: 300, height: 200 %>
      <% else %>
        <%= image_tag asset_path('no_image.jpg'), size: "200x200" %>
      <% end %>
    </div>

    <div class="col-lg-8">

      <table>
        <tr>
          <td>タイトル</td>
          <td><%= @log.title %></td>
        </tr>
        <tr>
          <td>旅行先</td>
          <td><%= @log.location %></td>
        </tr>
        <tr>
          <td>旅行日</td>
          <td><%= @log.date %></td>
        </tr>
        <tr>
          <td>物価</td>
          <td><%= @log.price_i18n %></td>
        </tr>
        <tr>
          <td>治安</td>
          <td><%= @log.public_order_i18n %></td>
        </tr>
        <tr>
          <td>食事</td>
          <td><%= @log.meal_i18n %></td>
        </tr>
        <tr>
          <td>投稿者</td>
          <td><%= link_to @log.user.name, user_path(@log.user.id) %></td>
        </tr>
        <tr>
          <td>内容</td>
          <td><%= @log.body %></td>
        </tr>

      </table>

    </div>
  </div>
</div>

<div class="text-center">
  <% if @log.user == current_user %>
    <%= link_to "編集する",edit_log_path(@log.id),class: "btn btn-success" %>
  <% end %>
</div>

<div class="text-center">
  <p>コメント件数：<%= @log.log_comments.count %></p>
  <% @log.log_comments.each do |log_comment| %>
    <%= log_comment.user.name %>
    <%= log_comment.created_at.strftime('%Y/%m/%d') %><%= log_comment.comment %>
    <% if log_comment.user == current_user %>
      <%= link_to "削除", log_log_comment_path(log_comment.log, log_comment), method: :delete %>
    <% end %>
  <% end %>
</div>
<div class="text-center">
  <%= form_with model: [@log, @log_comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>

<div class="text-center">
  <% if @log.favorited_by?(current_user) %>
    <p>
      <%= link_to log_favorites_path(@log), method: :delete do %>
        ♥<%= @log.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to log_favorites_path(@log), method: :post do %>
        ♡<%= @log.favorites.count %> いいね
      <% end %>
    </p>
  <% end %>
</div>

