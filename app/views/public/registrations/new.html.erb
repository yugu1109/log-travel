<h2 class="font-weight-bold text-center bg-light py-2">新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="container">
    <!-- エラーメッセージ -->
    <%= render "public/shared/error_messages", resource: resource %>

    <!-- 名前 -->
    <div class="mb-3">
      <%= f.label :name, "名前", class: "form-label" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
    </div>

    <!-- 年齢 -->
    <div class="mb-3">
      <%= f.label :age, "年齢", class: "form-label" %>
      <%= f.text_field :age, autocomplete: "age", class: "form-control" %>
    </div>

    <!-- 性別 -->
    <div class="mb-3">
      <%= f.label :gender, "性別", class: "form-label" %><br />
      <div class="form-check form-check-inline">
        <%= f.radio_button :gender, :true, class: "form-check-input" %>
        <%= f.label :gender, '男性', class: "form-check-label" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :gender, :false, class: "form-check-input" %>
        <%= f.label :gender, '女性', class: "form-check-label" %>
      </div>
    </div>

    <!-- メールアドレス -->
    <div class="mb-3">
      <%= f.label :email, "メールアドレス", class: "form-label" %>
      <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
    </div>

    <!-- パスワード -->
    <div class="mb-3">
      <%= f.label :password, "パスワード", class: "form-label" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>

    <!-- パスワード確認 -->
    <div class="mb-3">
      <%= f.label :password_confirmation, "パスワード確認", class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="text-center">
      <%= f.submit "新規登録", class: "btn btn-primary btn-lg w-100" %>
    </div>
  </div>
<% end %>

<div class="container text-center mt-3">
  <%= link_to 'ゲストログイン', users_guest_sign_in_path, method: :post, class: "btn btn-secondary btn-lg w-100" %>
</div>


