<div class="container">
  <div class="row">
    <div class="col-mg-2">
      <h4 class="font-weight-bold my-4 bg-light">ユーザー編集</h4>
    </div>
  </div>

  <div class="row">
    <div class="col">

      <%= form_with model: @user, url: user_path(@user.id) do |f| %>

        <div class="field">
          <%= f.label :name, "名前" %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>
        <div class="field">
          <%= f.label :age, "年齢" %><br />
          <%= f.text_field :age, autofocus: true, autocomplete: "age" %>
        </div>
        <td>性別</td>
        <td>
          <div class="custom-control custom-radio custom-control-inline">
            <%= f.radio_button :gender, :true %>
            <%= f.label :gender, '男性', for: 'is_active-on-sale' %>
          </div>
          <div class="custom-control custom-radio custom-control-inline">
            <%= f.radio_button :gender, :false %>
            <%= f.label :gender, '女性', for: 'is_active-off-sale' %>
          </div>
        </td>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード確認" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <% if @user == current_user %>
          <%= f.submit '変更を保存',class: "btn btn-success" %>
        <% end %>
        <% if @user == current_user %>
          <%= link_to "退会する", users_unsubscribe_path, class:"btn btn-danger" %>
        <% end %>

      <% end %>

    </div>
  </div>
</div>

