<div class="container">
  <div class="row">
    <div class="col-mg-2">
      <h4 class="font-weight-bold my-4 bg-light">ユーザー詳細</h4>
    </div>
  </div>
  <div class="row">

    <div class="col-lg-4">
      <%= image_tag @user.get_image, width: 300, height: 200 %>
    </div>

    <div class="col-lg-8">

      <table>
        <tr>
　　　    <td>名前</td>
　　　    <td><%= @user.name %></td>
　　　  </tr>
        <tr>
　　　    <td>年齢</td>
　　　    <td><%= @user.age %></td>
　　　  </tr>
        <tr>
　　　    <td>性別</td>
　　　    <td><%= @user.gender %></td>
　　　  </tr>
　　　  <tr>
　　　    <td>会員ステータス</td>
　　　    <td class="<%= @user.is_active? ? 'text-success font-weight-bold' : 'text-muted font-weight-bold' %> "><%= @user.user_status %></td>
　　　  </tr>
　　　</table>

　　</div>
  </div>
</div>

　　<div class="text-center">
　　  <%= link_to "編集する",edit_user_path(@user.id),class: "btn btn-success" %>
　　</div>


